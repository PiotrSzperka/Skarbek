# Copy this file to .env and adjust values before running docker compose

# Container images to deploy. Override if you want specific tags.
BACKEND_IMAGE=peterszp/skarbek-backend:latest
FRONTEND_IMAGE=peterszp/skarbek-frontend:latest

# Host-side ports (change these if host ports like 8000 are already taken)
# Example: BACKEND_HOST_PORT=8080
BACKEND_HOST_PORT=8000
# Example: FRONTEND_HOST_PORT=3001
FRONTEND_HOST_PORT=3000

# Database credentials (backend uses these to connect)
POSTGRES_USER=skarbek
POSTGRES_PASSWORD=change_me
POSTGRES_DB=skarbek

# Backend application credentials / secrets
ADMIN_USER=admin
ADMIN_PASSWORD=change_me
JWT_SECRET=change_me_to_random_value
